<div class="section section-blue section-w-footer">
  <h2>Contact</h2>
  <p class="text-center">Feel free to connect with me using the form below or any of the links provided.</p>
  <div class="form-contact">
    <%= simple_form_for @contact do |f| %>
      <% if flash[:error].present? %>
        <p><%= flash[:error] %></p>
      <% end %>

      <div class="form-inputs">
        <div class="form-group w100 string required user_first_name">
          <input class="form-control string first_name required special w100" autocomplete="name" autofocus="autofocus" required="required" aria-required="true" placeholder="Full Name" type="text">
        </div>
        <div class="form-group w100 email required user_email">
          <input class="form-control string email required special w100" autocomplete="email" autofocus="autofocus" required="required" aria-required="true" placeholder="Email" type="email" value="">
        </div>
        <div class="form-group w100 required">
          <textarea class="form-control required special w100" autocomplete="email" autofocus="autofocus" required="required" aria-required="true" placeholder="Message" type="email" value="" id="user_email"></textarea>
        </div>

      <div class="hidden">
        <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <%= f.button :submit, 'Send Message', class: "btn-box btn-hover-white" %>
    <% end %>
  </div>
</div>
</div>
<div class="section-blue"><%= render "shared/footer" %></div>

